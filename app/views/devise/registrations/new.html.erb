<div class="authen-box">
  <div class="title"><%= t "app.signup" %></div>
  <div class="authen-form">
    <%= form_for resource, as: resource_name,
      url: registration_path(resource_name) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name,
          autofocus: true, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email,
          class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> <%= t "common.char_min" %>)</em>
        <% end %>
        <br/>
        <%= f.password_field :password, autocomplete: "off",
          class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "off",
          class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit t("app.signup"), class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="already-have-account">
      <%= t "app.already_have_account" %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
