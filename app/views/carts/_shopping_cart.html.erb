<% if @order_items.size == 0 %>
  <p class="text-center">
    <%= link_to t("order_items.go_back"), products_path %>
  </p>
<% else %>
  <% @order_items.each do |order_item| %>
    <%= render 'carts/cart_row', product: order_item.product,
      order_item: order_item, show_total: true %>
  <% end %>
<% end %>
<div><%= current_order.price %></div>
<div><%= link_to t("orders.check_out"), orders_path,
  method: :create, class: "btn btn-primary" %></div>
